<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.InicioFragment">

    <!--EMPIEZA LAYOUT PRINCIPAL-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <!-- Empieza barra de pesos -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp">

            <TextView android:id="@+id/tv_inicio_pesoActual"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:text="69 kg."
                android:background="@drawable/round_advice_button"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"/>

            <TextView android:id="@+id/tv_inicio_pesoIdeal"
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:text="64 kg."
                android:background="@drawable/round_orange_button"
                android:gravity="right|center"
                android:paddingRight="30dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"/>

            <TextView android:id="@+id/tv_inicio_pesoNormal"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:text="51 kg."
                android:background="@drawable/round_beige_button"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:layout_alignParentLeft="true"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_inicio_pesoNormal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/normal"
                    android:layout_below="@id/tv_inicio_pesoNormal"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/gray_text"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/ideal"
                    android:layout_below="@id/tv_inicio_pesoIdeal"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/gray_text"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/actual"
                    android:layout_below="@id/tv_inicio_pesoActual"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/gray_text"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>
        <!-- TERMINA BARRA DE PESOS -->

        <!-- EMPIEZAN BOTONES DE RECoMENDACIONES Y FAVORITOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView android:id="@+id/img_inicio_recRecetas"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="76dp"
                    android:src="@mipmap/recomendadosreceta"
                    android:scaleType="fitCenter"/>

                <ImageView android:id="@+id/img_inicio_favoritos"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="76dp"
                    android:src="@mipmap/favoritos"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/recomendations"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="14sp"
                    android:textColor="@color/gray_text"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/favorites"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="14sp"
                    android:textColor="@color/gray_text"
                    android:gravity="center"
                    />


            </LinearLayout>

        </LinearLayout>
        <!-- TERMINAN BOTONES DE RECOMENDACIONES Y FAVORITOS -->

        <!-- EMPIEZA TEXTVIEW DE FECHA -->
        <TextView android:id="@+id/tv_inicio_fecha"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/round_advice_button"
            android:text="jueves, 1 de julio de 2021"
            android:gravity="center"
            android:fontFamily="@font/poppins_extra_bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>
        <!-- TERMINA TEXTVIEW DE FECHA-->

        <!-- EMPIEZAN COMIDAS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="30dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_gray_button">
                
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:text="Desayuno"
                    android:background="@drawable/round_beige_button"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"/>

                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_gray_button"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:text="Merienda"
                    android:background="@drawable/round_beige_button"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_gray_button"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:text="Comida"
                    android:background="@drawable/round_beige_button"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"/>


            </RelativeLayout>
            
        </LinearLayout>
        <!-- TERMINAN COMIDAS -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <ImageView android:id="@+id/img_inicio_agregar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:src="@mipmap/agregar"/>

                <TextView android:id="@+id/img_inicio_totalCalorias"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:text="240"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/round_orange_button"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Agregar comida"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total calorías"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!-- TERMINA LAYOUT PRINCIPAL -->

    </ScrollView>

</FrameLayout>

