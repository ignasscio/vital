<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alimentos.VistaAlimentosFragment"
    android:id="@+id/vistaAlimentosFragment"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button android:id="@+id/btn_alimento"
            android:layout_width="296dp"
            android:layout_height="55dp"
            android:text="@string/frutas"
            android:textAllCaps="false"
            android:background="@drawable/round_beige_button"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:enabled="true"/>

        <GridView android:id="@+id/gridview_alimentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="26dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="82dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView android:id="@+id/img_agregarAlimento"
                    android:layout_width="35dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:src="@mipmap/agregar"/>

                <ImageView android:id="@+id/img_agregarAlimentoFavoritos"
                    android:layout_width="35dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:src="@mipmap/aceptar"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Agregar nuevo"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Agregar favoritos"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>